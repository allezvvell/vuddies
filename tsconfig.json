{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"],
      "@constants/*": ["constants/*"],
      "@typings/*": ["typings/*"],
      "@apis/*": ["apis/*"],
      "@firebase/*": ["firebase/*"],
      "@utils/*": ["utils/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },

  "exclude": ["node_modules", "dist"]
}
