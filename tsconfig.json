{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"],
      "@constants/*": ["constants/*"],
      "@typings/*": ["typings/*"],
      "@apis/*": ["apis/*"],
      "@firebase/*": ["firebase/*"],
      "@utils/*": ["utils/*"]
    }
  },

  "exclude": ["node_modules"]
}
